{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./",
        "allowJs": true,
        "outDir": "build",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "checkJs": false,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
