{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "baseUrl": "/src",
        "outDir": "build",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "checkJs": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
